{
    "compilerOptions": {
        "noImplicitAny": false,
        "noImplicitThis": false,
        "maxNodeModuleJsDepth": 0,
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "types": ["node"],
        "lib": ["esnext", "dom"],
        "baseUrl": "./",
        "paths": {
            "chalk": ["chalk-override"]
        }
    },
    "include": ["create-react-app"],
    "exclude": ["create-react-app/packages/react-error-overlay",
                "create-react-app/packages/react-scripts"]
}
